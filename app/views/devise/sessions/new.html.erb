<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="clearfix">
      <div class="input">
        <%= f.check_box :remember_me %> 
        Keep me signed in
      </div>
    </div>
  <% end -%>

  <div class="actions"><%= f.submit "Sign in", :class => "btn" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
