<%= javascript_tag do %>
  Shuff.init(<%= @tasks.to_json.html_safe %>, <%= @contexts.to_json.html_safe %>);
<% end -%>


<div class="row" id="dashboard">
  <div class="span3">
    <h1 id="task-name">Doing nothing!</h1>
    <br />
    <div id="rotatescroll">
      <div class="viewport">
        <div class="overview">
          <p>Start time: <span id="timer-start"></span></p>
          <p id="timer-time">0:00</p>
          <p>End time: <span id="timer-end"></span></p>
        </div>
      </div>
      <div class="dot"></div>
      <div class="overlay"></div>
      <div class="thumb"></div>
    </div>

    <div id="daily-chart" style="width:270px;height:300px;" data-pts=""></div>
    <br />
    <br />
    Current mood: Blah
    <br />
    Set: 
    <% (1..10).each do |i| %>
      <%= link_to i, "#" %>
    <% end %>
  </div>

  <div class="span5">
    <div id="task"></div>
  </div>

  <div class="span4">
    <h2 id="context-options">
      <% @contexts.each do |c| %>
        <%= link_to c.name, "/#/contexts/#{c.id}", :id => "context#{c.id}", :class => "context-option" %>
      <% end %>
    </h2>
    <div id="context"></div>
  </div>
</div>
    
